<dialog id="card-create">
    <article>
        <header>
            <button aria-label="Close" rel="prev" onclick="closeModal(document.getElementById('card-create'))"></button>
            <h3>Создание карточки</h3>
        </header>
        <p>
            <input type="text" id="title">
            <textarea id="details" cols="30" rows="10"></textarea>
        </p>
        <footer>
            <button class="secondary" onclick="closeModal(document.getElementById('card-create'))">
                Cancel
            </button>
            <button onclick="cardManager.createCard()">Confirm</button>
        </footer>
    </article>
</dialog>